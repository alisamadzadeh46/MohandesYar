<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B1885A" />
            <stroke
                android:width="1dp"
                android:color="#756767" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7287D1"
                android:endColor="#00BCD4"
                android:angle="270" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>